<h1>Edit a Figure</h1>

<form method="post" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Figure Name:</label> <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>" />

  <br /><br /><br />

  <label>Choose an existing Title:</label>

  <br /><br />

  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%> value="<%=title.id%>" ><%=title.name%></input>
  <%end%>

  <br /><br />

  <label>and/or, create a new Title:</label> <input type="text" name="title[name]" id="new_title"></input>

  <br /><br /><br />

  <label>Choose an existing Landmark:</label>

  <br /><br />

  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%> value="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>

  <br /><br />

  <label>and/or, create a new Landmark:</label> <input type="text" name="landmark[name]" id="new_landmark"></input>

  <br /><br />

  <input type="submit" value="Edit Figure" />

</form>
